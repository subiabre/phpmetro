{
    "name": "subiabre/phpmetro",
    "description": "Statistical analysis and testing for PHP projects.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Facu",
            "email": "subiabrewd@gmail.com"
        }
    ],
    "require": {},
    "require-dev": {
        "phpunit/phpunit": "^8.5"
    },
    "bin": [
        "phpmetro"
    ],
    "suggest": {
        "markrogoyski/math-php": "Advanced mathematics with a simple API.",
        "amenadiel/jpgraph": "Draw graphs for your tests using PHP."
    },
    "autoload": {
        "psr-4": {
            "PHPMetro\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PHPMetro\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-package-install": [
            "cp ./vendor/subiabre/phpmetro/phpmetro.xml phpmetro.xml"
        ]
    }
}
